<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8C4122"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="BENDER BATTLE"
        android:textColor="#000000"
        android:textColorHighlight="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="serif" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:scaleY="2"
            app:srcCompat="@drawable/flash" />

        <ImageView
            android:id="@+id/opponentImage"
            android:layout_width="167dp"
            android:layout_height="147dp"
            android:layout_gravity="right"
            app:srcCompat="@mipmap/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/oppHealth"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Health"
            android:textColor="#000000"
            android:textSize="18sp"
            app:fontFamily="serif" />

        <TextView
            android:id="@+id/opponent"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:freezesText="false"
            android:gravity="right"
            android:text="Computer"
            android:textColor="#000000"
            android:textSize="18sp"
            app:fontFamily="serif" />
    </LinearLayout>

    <TextView
        android:id="@+id/oppLog"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#000000"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:fontFamily="serif-monospace" />

    <TextView
        android:id="@+id/log"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#000000"
        android:gravity="center"
        android:text="FIGHT!"
        android:textSize="18sp"
        app:fontFamily="serif-monospace" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/player"
            android:layout_width="242dp"
            android:layout_height="29dp"
            android:text="Player Name"
            android:textColor="#000000"
            android:textSize="18sp"
            app:fontFamily="serif" />

        <TextView
            android:id="@+id/health"
            android:layout_width="198dp"
            android:layout_height="29dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Health"
            android:textColor="#000000"
            android:textSize="18sp"
            app:fontFamily="serif" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/playerImage"
            android:layout_width="176dp"
            android:layout_height="150dp"
            android:layout_gravity="left"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/attackOne"
                android:layout_width="196dp"
                android:layout_height="37dp"
                android:foregroundGravity="right"
                android:gravity="center_horizontal"
                android:text="Attack One"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/attackTwo"
                android:layout_width="196dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:foregroundGravity="right"
                android:gravity="center_horizontal"
                android:text="Attack Two"
                android:textSize="18sp" />

            <Button
                android:id="@+id/attackThree"
                android:layout_width="196dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:foregroundGravity="right"
                android:gravity="center_horizontal"
                android:text="Attack Three"
                android:textSize="18sp" />

            <Button
                android:id="@+id/attackFour"
                android:layout_width="196dp"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:foregroundGravity="right"
                android:gravity="center_horizontal"
                android:text="Attack Four"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/infoOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:text="i" />

            <Button
                android:id="@+id/infoTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="i" />

            <Button
                android:id="@+id/infoThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="i" />

            <Button
                android:id="@+id/infoFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="i" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/quit"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="QUIT"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>