<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="BENDER BATTLE" />

    <ImageView
        android:id="@+id/opponentImage"
        android:layout_width="167dp"
        android:layout_height="147dp"
        android:layout_gravity="right"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/oppHealth"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Health" />

        <TextView
            android:id="@+id/opponent"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:freezesText="false"
            android:gravity="right"
            android:text="Computer" />
    </LinearLayout>

    <TextView
        android:id="@+id/log"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:gravity="center"
        android:text="FIGHT!" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/player"
            android:layout_width="242dp"
            android:layout_height="29dp"
            android:text="Player Name" />

        <TextView
            android:id="@+id/health"
            android:layout_width="198dp"
            android:layout_height="29dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Health" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/playerImage"
            android:layout_width="176dp"
            android:layout_height="150dp"
            android:layout_gravity="left"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/attackOne"
                android:layout_width="236dp"
                android:layout_height="37dp"
                android:layout_gravity="right"
                android:foregroundGravity="right"
                android:gravity="center_horizontal"
                android:text="Attack One" />

            <Button
                android:id="@+id/attackTwo"
                android:layout_width="236dp"
                android:layout_height="41dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:foregroundGravity="right"
                android:gravity="center_horizontal"
                android:text="Attack Two" />

            <Button
                android:id="@+id/attackThree"
                android:layout_width="236dp"
                android:layout_height="34dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:foregroundGravity="right"
                android:gravity="center_horizontal"
                android:text="Attack Three" />

            <Button
                android:id="@+id/attackFour"
                android:layout_width="234dp"
                android:layout_height="39dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:foregroundGravity="right"
                android:gravity="center_horizontal"
                android:text="Attack Four" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/restart"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="RESTART" />
    </LinearLayout>

</LinearLayout>